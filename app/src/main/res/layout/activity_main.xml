<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.galante.martin.opentendsapplication.activities.FirstActivity">

    <TextView
        android:text="@string/busca_tu_superheroe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium" />

    <EditText
        android:id="@+id/ed_txt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_name_to_search"
        android:inputType="textCapWords|textPersonName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/heroes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50" />


</LinearLayout>
